<div class="row justify-content-center mt-3">
  <tr>
    <td class="align-middle">
      <%= content_tag :span, test.title, class: 'test-title', data: { test_id: test.id } %>
      <%= render 'form_inline', test: test == @test ? @test : test %>
    </td>
    <td class="align-middle"><%= test_level(test) %></td>
    <td class="align-middle"><%= test.questions.count %></td>
    <td class="align-middle"><%= link_to t('navigation.show'), admin_test_path(test) %></td>
    <td class="align-middle">
      <%= link_to t('navigation.edit'), 
                  edit_admin_test_path(test),
                  method: :get, 
                  data: { test_id: test.id },
                  class: 'form-inline-link' %>
    </td>
    <td class="align-middle">
      <%= link_to t('navigation.delete'), 
                  admin_test_path(test),
                  method: :delete,
                  remote: true, 
                  data: { confirm: "Are you sure?" } %>
    </td>
    <td class="align-middle"><%= test.timer.to_s + t('helpers.minutes') %></td>
  </tr>
</div>