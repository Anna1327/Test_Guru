<div class="row justify-content-center mt-3">
  <tr>
    <td><%= test.title %></td>
    <td><%= test_level(test) %></td>
    <td><%= test.questions.count %></td>
    <td><%= link_to t('navigation.show'), admin_test_path(test) %></td>
    <td><%= link_to t('navigation.edit'), edit_admin_test_path(test) %></td>
    <td>
      <%= link_to t('navigation.delete'), 
                  admin_test_path(test),
                  method: :delete,
                  remote: true, 
                  data: { confirm: "Are you sure?" } %>
    </td>
  </tr>
</div>