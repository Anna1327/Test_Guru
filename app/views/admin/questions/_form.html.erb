<h3><%= question_header(@question) %></h3>

<%= form_with model: [:admin, @test, @question] do |form| %>
  <%= render 'shared/errors', resource: @question %>
  <p>
    <%= form.label :body %>
    <%= form.text_field :body %>
  </p>
  <p><%= form.submit %></p>
<% end %>
<%= link_to 'Back', admin_test_path(@question.test) %> |
<%= link_to 'To tests', admin_tests_path %>