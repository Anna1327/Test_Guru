<tr>
  <td class="align-middle">
    <%= content_tag :span, badge.title, class: 'test-title', data: { badge_id: badge.id } %>
  </td>
  <td class="align-middle"><%= image_tag(badge.image_url, size: "80x80") %></td>
  <td class="align-middle"><%= badge.condition %></td>
  <td class="align-middle"><%= link_to t('admin.badges.index.show'), admin_badge_path(badge) %></td>
  <td class="align-middle">
    <%= link_to t('admin.badges.index.edit'), edit_admin_badge_path(badge) %>
  </td>
  <td class="align-middle">
    <%= link_to t('admin.badges.index.delete'),
                admin_badge_path(badge),
                method: :delete,
                data:   { confirm: "Are you sure?" } %>
  </td>
</tr>